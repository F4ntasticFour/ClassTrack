
@page
@model ClassTrack.Pages.InstructorPage

@{
    ViewData["Title"] = "Instructor Page";
}

<div class="card mx-auto " style=" background: white;
                                  margin: 2% ;
                                  width: 105%;
                                  height: 105vh;
                                  /*display: grid;*/
                                  /*grid-template-columns: repeat(auto-fill, minmax(370px, 1fr));*/
                                  gap: 20px;
                                  border-radius: 1%;">
    <nav class="navbar navbar-expand-lg navbar-light bg-light" style="border-radius: 1% ">
        <ul class="nav nav-tabs" id="myTab" role="tablist">
            <li class="nav-item" role="presentation">
                <button class="nav-link active" id="course-tab" data-bs-toggle="tab" data-bs-target="#course" type="button" role="tab" aria-controls="course" aria-selected="true">Courses</button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="dashboard-tab" data-bs-toggle="tab" data-bs-target="#dashboard" type="button" role="tab" aria-controls="dashboard" aria-selected="false">Dashboard</button>
            </li>
            <!-- Rest of your tabs -->
        </ul>
    </nav>

    <div class="tab-content" id="myTabContent">
        <div class="tab-pane fade show active" id="course" role="tabpanel" aria-labelledby="course-tab">
            <header style="background-color: #f8f9fa; padding: 20px; text-align: center;">
                <h1>Welcome @Model.instructor_name</h1>
            </header>

            <div class="container" style="display: flex; justify-content: center; align-items: center; height: 10vh;">
                <div class="input-group mb-3">
                    <select class="form-select" id="courseSelection" aria-label="Course selection">
                        <option selected>Select Course</option>
                        <option value="1">Course 1</option>
                        <option value="2">Course 2</option>
                        <option value="3">Course 3</option>
                    </select>
                    <select class="form-select" id="sectionSelection" aria-label="Section selection">
                        <option selected>Select Section</option>
                        <option value="1">Section 1</option>
                        <option value="2">Section 2</option>
                        <option value="3">Section 3</option>
                    </select>
                    <button class="btn btn-primary" onclick="SubmitSelection">Submit</button>
                </div>
            </div>
            <!-- Button to open the sidebar -->
            <div class="-grid gap-2 d-md-flex justify-content-md-end">
                <button class="btn btn-primary" type="button" data-bs-toggle="offcanvas" data-bs-target="#sidebar" aria-controls="sidebar">
                    Open Filters
                </button>
            </div>

            <!-- Collapsible sidebar for filtering options -->
            <div class="offcanvas offcanvas-start" tabindex="-1" id="sidebar" aria-labelledby="sidebarLabel">
                <div class="offcanvas-header">
                    <h5 id="sidebarLabel">Filtering Options</h5>
                    <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
                </div>
                <div class="offcanvas-body">
                    <div class="mb-3">
                        <label for="attendanceStatus" class="form-label">Attendance Status</label>
                        <select class="form-select" id="attendanceStatus">
                            <option selected>Select Status</option>
                            <option value="1">Present</option>
                            <option value="2">Absent</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="specificWeeks" class="form-label">Specific Weeks</label>
                        <select class="form-select" id="specificWeeks">
                            <option selected>Select Week</option>
                            <option value="1">Week 1</option>
                            <option value="2">Week 2</option>
                            <option value="3">Week 3</option>
                            <option value="4">Week 4</option>
                            <option value="5">Week 5</option>
                            <option value="6">Week 6</option>
                            <option value="7">Week 7</option>
                            <option value="8">Week 8</option>
                            <option value="9">Week 9</option>
                            <option value="10">Week 10</option>
                        </select>
                    </div>
                    <!-- Add more filters as needed -->
                </div>
            </div>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                    <tr>
                        <th>ID</th>
                        <th>Attendance Status</th>
                    </tr>
                    </thead>
                  <tbody>
                      @for (int i = 0; i < Model.record_id.Count; i++)
                      {
                          <tr>
                              <td>@Model.student_id[i]</td>
                              <td>@Model.attendance_value[i]</td>
                          </tr>
                      }
                  </tbody>
                </table>
            </div>
        </div>

        <div class="tab-pane fade" id="dashboard" role="tabpanel" aria-labelledby="dashboard-tab">
            <header style="background-color: #f8f9fa; padding: 20px; text-align: center;">
                <h1>Welcome @Model.instructor_name</h1>
            </header>
        </div>
        <!-- Rest of your tab panes -->
    </div>
</div>
