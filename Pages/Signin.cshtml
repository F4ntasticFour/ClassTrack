@page
@model ClassTrack.Pages.SigninModel
@{
    ViewData["Title"] = "Sign In";
}

<div class="card p-4 mb-4 col-3 rounded-3 mx-auto shadow-sm" style="margin-top: 150px;">
    <h2 class="mx-auto mt-2">Sign In</h2>
    <div class="form-group mt-2">
        <form method="post">
            <div class="form-group mt-3">
                <label for="User_FirstName">Name:</label>
                <label>TODO</label>
                <input asp-for="User.FirstName" id="User_FirstName" class="form-control" type="text" />
            </div>
            <div class="form-group mt-3">
                <label for="User_Password">Password:</label>
                <input asp-for="User.Password" id="User_Password" class="form-control" type="password" />

            </div>
            <button type="submit" class="btn btn-primary mt-4 w-100 d-block">Sign In</button>
        </form>
    </div>
</div>
