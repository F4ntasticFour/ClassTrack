@page
@model ClassTrack.Pages.AttendanceSubmission
@{
    ViewData["Title"] = "Attendance Submission";
}

<container style="display: grid;
place-items: center">
    <div class="card p-4 mb-4 col-3 rounded-3 mx-auto shadow-sm" style="margin-top: 150px;">
        <h2 class="mx-auto mt-2">New Submission</h2>
        <div class="form-group mt-2">
            <form method="">
                <div class="form-group mt-3">
                    <label>Attendance Code</label>
                    <input asp-for="@Model.Code" id="Student_Name" placeholder="Code" class="form-control" type="text"/>
                </div>
                <button type="submit" class="btn btn-primary mt-4 w-100 d-block">Submit</button>
            </form>
        </div>
    </div>
</container>
