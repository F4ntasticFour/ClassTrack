@page
@model ClassTrack.Pages.AttendanceSubmission
@{
    ViewData["Title"] = "Attendance Submission";
}
<container style="display: grid;
place-items: center">
    <div class="card p-4 mb-4 col-3 rounded-3 mx-auto shadow-sm" style="margin-top: 150px;">
        <h2 class="mx-auto mt-2">New Submission</h2>
        <div class="form-group mt-2">
            <form method="post">
                <div class="form-group mt-3">
                    <label for="Student_Name">Name</label>
                    <input asp-for="Name" id="Student_Name" placeholder="John Doe" class="form-control" type="text"/>
                </div>
                <div class="form-group mt-3">
                    <label for="Student_Name">Student ID</label>
                    <input asp-for="Id" id="Student_ID" class="form-control" placeholder="2022000" type="number"/>
                </div>
                <button type="submit" class="btn btn-primary mt-4 w-100 d-block">Submit</button>
            </form>
        </div>
    </div>
</container>
